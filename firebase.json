{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/oauth-login",
        "function": "oauthLogin"
      },
      {
        "source": "/api/request-token",
        "function": "oauthCallback"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/dashboard",
        "destination": "/index.html"
      },
      {
        "source": "/dashboard/*",
        "destination": "/index.html"
      },
      {
        "source": "/rules",
        "destination": "/index.html"
      },
      {
        "source": "/error",
        "destination": "/index.html"
      }
    ]
  }
}
